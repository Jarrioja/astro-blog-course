---
import MainLayout from "src/layouts/MainLayout.astro";
import { Image, Picture } from "astro:assets";

import post05Img from "@images/post-05.png";

---
<MainLayout title="Imagenes">
    <h1 class="text-5xl text-white my-5">Imagenes</h1>
   
    <Image src={post05Img} width={250} height={250} alt="Imagen de un post"   />
    
    <Image style={{
        height: "250px",
        width: "250px",
    }} src={post05Img} width={500} height={500} alt="Imagen de un post"   />
   
   <h2>Low quality</h2>
    <Image src={post05Img} quality={"low"} width={250} height={250} alt="Imagen de un post"   />
    <h2>Avif</h2>
    <Image src={post05Img} format={"avif"} width={250} height={250} alt="Imagen de un post"   />
    <h2>Picture</h2>
    <!-- formats={["avif", "webp", "jpeg"]}
    widths={[240, 540, 720, post05Img.width]}
sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}  -->
    <Picture 
        src={post05Img} 
        
        width={250} 
        height={250} 
        alt="Imagen de un post"   />
</MainLayout>

<style>
    h2 {
        @apply text-white mt-10;
    }
</style>